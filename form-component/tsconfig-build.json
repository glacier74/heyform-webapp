{
  "compilerOptions": {
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": [
      "react/next",
      "react-dom/next"
    ],
    "skipLibCheck": true,
    "stripInternal": true,
    "removeComments": true,
    "declarationMap": true,
    "declaration": true,
    "declarationDir": "lib/types",
    "outDir": "lib/esm",
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "test",
    "coverage",
    "lib"
  ]
}
